-- Services
local TweenService = game:GetService("TweenService")

-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a TextButton
local textButton = Instance.new("TextButton")
textButton.Size = UDim2.new(0, 200, 0, 50)  -- Button size
textButton.Position = UDim2.new(0.5, -100, 0.5, -25)  -- Button position (centered)
textButton.Text = "Click me!"
textButton.Parent = screenGui

-- Create a Sound object
local sound = Instance.new("Sound")
sound.SoundId = "rbxassetid://12345678"  -- Replace with the actual sound ID
sound.Parent = game.Workspace

-- Function to create and expand the sphere
local function createAndExpandSphere(player)
    -- Wait 2 seconds before creating the sphere
    wait(2)

    -- Create the sphere
    local sphere = Instance.new("Part")
    sphere.Shape = Enum.PartType.Ball
    sphere.Material = Enum.Material.ForceField
    sphere.Color = Color3.fromRGB(0, 0, 0)  -- Black color
    sphere.Size = Vector3.new(5, 5, 5)  -- Initial size
    sphere.Position = player.Character.HumanoidRootPart.Position
    sphere.Anchored = true
    sphere.CanCollide = false
    sphere.Parent = workspace

    -- Tween information
    local tweenInfo = TweenInfo.new(
        5,  -- Time in seconds for faster expansion
        Enum.EasingStyle.Linear,
        Enum.EasingDirection.InOut
    )

    local tweenGoals = {
        Size = Vector3.new(15, 15, 15)  -- Expanded size
    }

    local tween = TweenService:Create(sphere, tweenInfo, tweenGoals)

    -- Play the tween
    tween:Play()

    -- Wait for the tween to complete
    tween.Completed:Wait()

    -- Wait an additional second before deleting the sphere
    wait(1)
    sphere:Destroy()
end

-- Play sound and start the sphere expansion when button is clicked
textButton.MouseButton1Click:Connect(function()
    sound:Play()  -- Play the sound
    createAndExpandSphere(game.Players.LocalPlayer)  -- Start sphere creation and expansion
end)
