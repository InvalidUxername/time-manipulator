local TweenService = game:GetService("TweenService")

-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a TextButton
local textButton = Instance.new("TextButton")
textButton.Size = UDim2.new(0, 200, 0, 50)  -- Button size
textButton.Position = UDim2.new(0.5, -100, 0.5, -25)  -- Button position (centered)
textButton.Text = "Click me!"
textButton.Parent = screenGui

-- Create a Sound object
local sound = Instance.new("Sound")
sound.SoundId = "rbxassetid://5129686200"  -- Replace with the actual sound ID
sound.Parent = game.Workspace

-- Play sound and create sphere 2 seconds after clicking the button
textButton.MouseButton1Click:Connect(function()
    sound:Play()  -- Play sound when button is clicked
    
    -- Delay the sphere creation by 2 seconds
    wait(2)

    -- Get the player's HumanoidRootPart
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local rootPart = character:WaitForChild("HumanoidRootPart")

    -- Create a sphere (Part)
    local sphere = Instance.new("Part")
    sphere.Shape = Enum.PartType.Ball
    sphere.Size = Vector3.new(1, 1, 1)  -- Initial size
    sphere.CFrame = rootPart.CFrame  -- Position at the player's HumanoidRootPart
    sphere.Anchored = true  -- Prevents sphere from falling
    sphere.CanCollide = false  -- Makes it non-collidable

    -- Set the sphere's Material and Color
    sphere.Material = Enum.Material.Forcefield  -- Set Material to Forcefield
    sphere.Color = Color3.new(0, 0, 0)  -- Set Color to black
    sphere.Parent = workspace

    -- Tween settings
    local tweenInfo = TweenInfo.new(
        10,  -- Duration (seconds)
        Enum.EasingStyle.Linear,  -- Easing style
        Enum.EasingDirection.InOut  -- Easing direction
    )

    -- Create the goal for the tween (expanded size)
    local goal = {Size = Vector3.new(10, 10, 10)}

    -- Create the tween
    local tween = TweenService:Create(sphere, tweenInfo, goal)

    -- Play the tween
    tween:Play()

    -- Wait for the tween to finish
    tween.Completed:Wait()

    -- Delete the sphere after 10 seconds
    sphere:Destroy()
end)
